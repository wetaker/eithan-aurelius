{
  "compilerOptions": {                        
    "target": "es2020",                               
    "module": "es2020",      // was 2020             
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "strict": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "exclude":[
    "./node_modules",
    "dist/**/*"
  ],
  "include":[
    "src/**/*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs" // WAs commonjs
    }
  }
}